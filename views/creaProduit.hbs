<section class="section">
  <div class="container is-fullhd">
    <h3>Création d'une nouvelle référence</h3>
    <div class="fondZone">
      <form method="POST" action="/creaProduit" class="mx-auto fondZone">
        <div class="form-group">
          <label for="marque"></label>
          <select class="form-control" name="marque">
            <option>Choix marque</option>
            <option>Green</option>
            <option>Bio Green</option>
            <option>Soft Green</option>
          </select>
        </div>
        <div class="form-group">
          <label for="usage"></label>

          <select class="form-control" name="nature">
            <option>Choix nature</option>
            <option>Crème de jour</option>
            <option>Crème de nuit</option>
            <option>Crème pour le corps</option>
          </select>
        </div>
        <div class="form-group">
          <label for="format"></label>
          <select class="form-control" name="format">
            <option>Choix format</option>
            <option>Pot de 75 ml</option>
            <option>Pot de 150 ml</option>
            <option>Tube 250 ml</option>
          </select>
        </div>
        <div class="form-group">
          <label for="info"></label>
          <input type="text" class="form-control" placeholder="Description" name="info">
        </div>
        <div class="form-group">
          <label for="ref"></label>
          <input type="text" class="form-control" placeholder="référence" name="ref">
        </div>
        <div class="form-group">
          <label for="prix"></label>
          <input type="number" step="0.01" class="form-control" placeholder="0.00" name="prix">
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-sm btn-right">Valider</button>
        </div>
      </form>
    </div>
  </div>
</section>