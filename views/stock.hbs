<section class="section" id="stock">
  <div class="container  stock">
    <div class="row">
      <div class="col-md-12">
        <h3>Tableau des produits à la vente</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="formTri">
          <form>
            <div class="form-group">
              <label for="choixTri"></label>
              <select class="form-control" name="choixTri">
                <option>Tri par date d'ajout</option>
                <option>Tri par marque</option>
                <option>Tri par nature</option>
                <option>Tri par format</option>
                <option>Tri par référence</option>
              </select>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="ajoutRef">
          <a href="/creaProduit" class="btn">Nouvelle référence</a>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <table method="GET" action="/stock" class="table fondZone">
          <thead>
            <tr>
              <th scope="col">Réf.</th>
              <th scope="col">Marque</th>
              <th scope="col">Nature</th>
              <th scope="col">Format</th>
              <th scope="col">Description</th>
              <th scope="col">Prix</th>
              <th scope="col">Edit</th>
              <th scope="col">Suppr.</th>

            </tr>
          </thead>
          <tbody>
            {{#each produit}}
            <tr>
              <td>{{this.ref}}</td>
              <td>{{this.marque}}</td>
              <td>{{this.nature}}</td>
              <td>{{this.format}}</td>
              <td>{{this.info}}</td>
              <td>{{this.prix}}</td>
              <a href="/modifProduit">
                <td scope="col"><i class="fas fa-edit btn"></i></td>
              </a>
              <a href="/deleteProduit">
                <td scope="col"><i class="fas fa-trash-alt btn"></i></td>
              </a>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <nav aria-label="stock-pagination">
      <ul class="pagination justify-content-center">
        <li class="page-item disabled">
          <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Préc.</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">Suiv.</a>
        </li>
      </ul>
    </nav>
  </div>
</section>